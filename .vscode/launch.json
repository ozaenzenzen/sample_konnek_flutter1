    "version": "0.2.0",
    "configurations": [

        {
            "name": "app development",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
				"dev",
				"--target",
				"lib/main_development.dart",
            ]
        },
        {
            "name": "app staging",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
				"staging",
				"--target",
				"lib/main_staging.dart",
            ]
        },
        {
            "name": "app production",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
				"production",
				"--target",
				"lib/main_production.dart",
            ]
        },
        {
            "name": "app (profile mode)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
				"staging",
				"--target",
				"lib/main_staging.dart",
            ],
            "flutterMode": "profile"
        },
        {
            "name": "app (release mode 1)",
            "request": "launch",
            "type": "dart",
        },
        // {
        //     "name": "app (release mode)",
        //     "request": "launch",
        //     "type": "dart",
        //     "flutterMode": "release"
        // }
    ]
}